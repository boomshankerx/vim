#!/bin/bash
os=`uname`
echo $os

exclude="--exclude-from exclude"
if [[ "$os" == "FreeBSD" ]]; then
	exclude="--exclude-from exclude_freebsd"
fi

rsync -rvz --delete --delete-excluded $exclude .vim .vimrc ~

if [[ "$os" == "Darwin" ]]; then
    echo "I'm a MAC..."
    sed -i'' -e 's/set guifont=.*/set guifont=DejaVu\\ Sans\\ Mono\\ for\\ Powerline:h11/' ~/.vimrc
fi
